<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>All Blog Posts</h1>

    <% if (posts.length === 0) { %>
        <p>No posts yet. <a href="/">Create one here</a>.</p>
    <% } else { %>
        <ul>
            <% posts.forEach(post => { %>
                <li>
                    <h2><%= post.title %></h2>
                    <p><%= post.content %></p>
                    <p><em>by <%= post.author %> on <%= post.createdAt %></em></p>
                </li>
            <% }) %>
        </ul>
    <% } %>

    <p><a href="/">Create another post</a></p>
</body>
</html>
